---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/baselayout.astro";
import ProjectPostCard from "../components/projects/ProjectPostCard.astro";
import type { Crumb } from "../utils/types";

const breadcrumbs: Array<Crumb> = [{ title: "PROJECTS", href: "/projects/" }];
const projectPosts = await getCollection("projects");
---

<BaseLayout title="projects" current="projects" {breadcrumbs}>
<div class="flex flex-col md:space-y-8 space-y-5 w-full mb-3">
  <div class="flex flex-col space-y-2 md:space-y-4">
    <h1 class="text-LM-Title dark:text-DM-Title uppercase text-[20px] font-title md:text-[25px] tracking-[-0.88px]">
       Welcome to my Projects
    </h1>
    <p class="text-LM-Para dark:text-DM-Para font-para lg:w-10/12 text-[14px] md:text-[17px] font-normal">
      These are the projects I have done. If you have any project ideas and would like to collaborate, just send me an <a class="text-LM-Link dark:text-DM-Link hover:underline underline-offset-3" href="mailto:yashsharma4583@gmail.com">e-mail</a> we'll talk about it!
    </p>
  </div>
  <hr class="border-LM-Secondary dark:border-DM-Secondary" />
  <div class="flex flex-col space-y-4 md:space-y-8 items-start">
        {projectPosts.map((projectPost) => <ProjectPostCard {projectPost} />)}
  </div>
</div>
</BaseLayout>

<style>
  hr {
  display: block;
  border-width: 1px;
  opacity: 0.36;
  border-radius: 2px;
}
</style>