---
import BaseLayout from "../layouts/baselayout.astro";
import "@fontsource-variable/playfair-display";

import type { Crumb } from "../utils/types";
import { Image } from "astro:assets";

import moon from "../imgs/blogs/moon.png";
import yash from "../imgs/home/yash1.png"
// import jupiter from "../imgs/blogs/jupiter.png";
import vortex from "../imgs/home/vortex-ring-sobel-figma.png";
import moon_lens from "../imgs/home/moonnlens.png";
import moon_sq from "../imgs/home/moon.png";
import golf_square from "../imgs/home/golf_square.png";
// import percentage from "../imgs/home/percentage.png";
// import roundedcube from "../imgs/home/roundedcube.png";
import thevoid from "../imgs/home/thevoid.png";
import diamond from "../imgs/home/diamond.png";

const breadcrumbs: Array<Crumb> = [{ title: "HOME", href: "/" }];
---

<BaseLayout title="homepage" breadcrumbs={breadcrumbs}>
  <main class="flex flex-col space-y-10 mb-5 md:mb-1 md:space-y-12">
    <div class="flex flex-col font-home items-between space-y-5 lg:flex lg:flex-row lg:space-y-0  lg:justify-between lg:items-center">
      <p class="left text-[33px] font-normal tracking-tight xl:text-[40px]"> Hey, I am <br/> <span class='text-[]'>Yash Sharma</span>. </p>
      <p class="right text-[24px] font-normal transition ease-linear text-LM-Para dark:text-DM-Para xl:text-[35px]"> I am currently a <span1 class="italic">sophomore</span1> in a university studying  <br/> <span class="text-LM-Title dark:text-DM-Title transition ease-linear"> Mechanical Engineering </span> </p>
    </div>
    <div class='hidden lg:grid lg:grid-cols-3 lg:gap-2 lg:bg-DM-Title-Bar p-2 rounded-xl'>
        <Image class="rounded-xl w-full invert dark:blend" src={diamond} alt="The Void"/>
        <!-- <Image class="rounded-xl w-full" src={golf_square} alt="The Void"/> -->
        <div class="lg:grid lg:grid-row-3 lg:gap-2 rounded-xl">
            <Image class="rounded-xl w-full" src={vortex} alt="The Void"/>
            <Image class="rounded-xl w-full" src={moon} alt="The Void"/>
        </div>
        <Image class="rounded-xl w-full" src={moon_lens} alt="The Void"/>
    </div>

    <!-- mobile display img -->
    <div class="lg:hidden carousel space-x-2">
        <Image class="rounded-xl w-full invert dark:blend" src={diamond} alt="The Void"/>
    </div>
  </main>
</BaseLayout>
