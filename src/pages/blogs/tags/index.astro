---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/baselayout.astro";
import type { Crumb } from "../../../utils/types";

const allPosts = await getCollection("blogs");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

const title = "yash / blogs / tags";
const current = "blogs";
const breadcrumbs: Array<Crumb> = [
    { title: "BLOGS", href: "/blogs/" },
    { title: `TAG`, href: `/blogs/tags/` },
];
---

<BaseLayout {title} {current} {breadcrumbs}>
    <div class="flex flex-col space-y-6">
        <h1
            class="text-LM-Title dark:text-DM-Title font-title text-[25px] uppercase tracking-[-0.015rem] font-[200]"
        >
            All Tags
        </h1>
        <ul class="font-title text-lg text-LM-Title dark:text-DM-Title font-medium">
            {
                tags.map((tag) => (
                    <li>
                        <a class="text-LM-Nav-Unselected dark:text-DM-Nav-Selected hover:text-LM-Logo dark:text-DM-Logo hover:underline" href={`/blogs/tags/${tag}/`}> {tag} </a>
                    </li>
                ))
            }
        </ul>
    </div>
</BaseLayout>
