---
import yash from "../imgs/yash.svg";
import { Image } from "astro:assets";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/playfair-display"
import "@fontsource/ibm-plex-sans-hebrew"
---

<html lang="en" class="bg-[#eeeeee] scroll-smooth antialiased">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="404.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>404</title>
  </head>
  <body>
    <main>
      <div class="flex flex-col items-center h-[780px] space-y-[40px] mx-[35px] mt-[45px] md:space-y-[200px] md:flex md:flex-col md:items-center md:mt-[45px]">
        <a href="/"><Image src={yash} alt="Personal Logo" height={60} width={104}/></a>
        <main class="bg-[#ffffff] rounded-[16px] flex flex-col h-full items-center justify-center px-20 md:px-20 md:py-20 md:flex md:flex-col md:items-center">
          <h1 class="text-[30px] mb-5 md:text-[45px] md:mb-10">404 Not Found</h1>
          <p class="text-[20px] md:text-[25px]">
            Sorry, this page does not exists :( <br />
            meanwhile visit the <a class="text-[#0b7da5] hover:underline" href="/">home</a> page.
          </p>
        </main>
        <Footer/>
      </div>
    </main>
  </body>
</html>

<style>
  div main h1{
    color: black;
    font-family: 'IBM Plex Sans Hebrew', sans-serif;
    font-weight: 700;
    letter-spacing: -0.81px;
  }
  p {
    color: #585858;
    font-family: 'Playfair Display Variable', serif;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.81px;
  }
</style>
