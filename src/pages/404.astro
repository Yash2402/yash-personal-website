---
import BaseLayout from "../layouts/baselayout.astro";
---

<BaseLayout title="404">
  <div
    class="bg-[#ffffff] m-auto my-[150px] shadow-xl dark:bg-DM-Title-Bar rounded-xl p-8 md:rounded-2xl flex flex-col items-center justify-center md:my-[130px] md:p-12 md:flex md:flex-col md:items-center"
  >
    <h1
      class="text-[30px] font-title font-[800] text-LM-Title dark:text-DM-Title mb-3 md:text-[35px] md:mb-5"
    >
      404 Not Found
    </h1>
    <p class="text-[18px] font-para text-center text-LM-Para dark:text-DM-Para md:text-[20px]">
      This page does not exist<br />
      perhaps visit the <a
        class="text-LM-Nav-Unselected dark:text-DM-Nav-Unselected hover:underline"
        href="/">home</a
      > page
    </p>
  </div>
</BaseLayout>