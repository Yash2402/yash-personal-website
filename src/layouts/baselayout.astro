---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface BaseLayoutProps {
  title?: string;
  current: string;
}

const { title, current } = Astro.props as BaseLayoutProps;
---

<!doctype html>
<html lang="en" class="selection:bg-DM-Nav-Selected dark:selection:bg-LM-Nav-Selected antialiased scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="y.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-LM-Background dark:bg-DM-Background max-w-[1650px] flex flex-col m-auto mt-6 md:mt-11">
      <Nav {current} />
      <main class="flex flex-col items-start mx-8 mt-6 md:mx-[120px] md:my-8">
        <slot />
      </main>
      <script is:inline>
        const theme = (() => {
          if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
          ) {
            return localStorage.theme;
          } else if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark";
          } else {
            return "light";
          }
        })();

        document.documentElement.classList.toggle("dark", theme === "dark");
        localStorage.setItem("theme", theme);
      </script>
    <Footer />
  </body>
</html>
