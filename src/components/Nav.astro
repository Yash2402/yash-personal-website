---
import { Image } from "astro:assets";
import { navLinks } from "../data/navLinks";

import yash from "../imgs/yash.svg";
import LMtoDM from "../imgs/LMtoDM.svg";
import menu from "../imgs/Menu.svg"
import ThemeIcon from "./ThemeToggle.astro";

import "@fontsource/ibm-plex-sans-hebrew";

import type { navItems } from "../utils/types";

interface NavProps{
  current: string;
  navitems: navItems[];
}
const {current, navitems} = Astro.props as NavProps
---
<header class="flex flex-row itmes-center justify-between bg-LM-Title-Bar dark:bg-DM-Title-Bar px-6 py-4 mx-5 rounded-[15px] md:flex md:flex-row md:items-center md:justify-between md:px-7 md:py-5 md:rounded-[20px] md:mx-20">
<a href="/"><Image src={yash} alt="Personal Logo" height={65} width={90} /></a>
  <div class="hidden md:flex md:flex-row md:items-center md:space-x-7 xl:flex xl:flex-row xl:items-center xl:space-x-11">
    {
      navLinks.map((navLink) => (
        <li class="list-none">
          <a class="text-LM-Nav-Unselected dark:text-DM-Nav-Unselected hover:text-LM-Nav-Selected dark:hover:text-DM-Nav-Selected" href={navLink.href}>
            {navLink.title}
          </a>
        </li>
      ))
    }
   <ThemeIcon isMobile={true} key={0}/> 
  </div> 
  <div class=" flex flex-row items-center space-x-6 md:hidden">
    <ThemeIcon isMobile={false} key={1}/> 
      <Image
        src={menu}
        height={17}
        width={27}
        alt="Menu"
      /></button
    > 
    </div>
</header>
