---
import { Image } from "astro:assets";
import { navLinks } from "../data/navLinks";

import yash from "../imgs/yash.svg";
import LM_to_DM from "../imgs/lm_to_dm.svg";
import menu from "../imgs/Menu.svg"

import "@fontsource/ibm-plex-sans-hebrew";

---
<a href="/"><Image src={yash} alt="Personal Logo" height={51} width={79} /></a>
  <div class="hidden md:flex md:flex-row md:items-center md:space-x-7 xl:flex xl:flex-row xl:items-center xl:space-x-11">
    {
      navLinks.map((navLink) => (
        <li class="list-none">
          <a class=" text-LM-Nav-Unselected hover:text-LM-Nav-Selected" href={navLink.href}>
            {navLink.title}
          </a>
        </li>
      ))
    }
    <button class="mt-[7px]">
      <Image
        src={LM_to_DM}
        height={30}
        width={30}
        alt="Light mode to Dark Mode switcher"
      />
    </button>
  </div> 
  <div class=" flex flex-row items-center space-x-[24px] md:hidden">
    <button class="mt-[7px]"
        ><Image
          src={LM_to_DM}
          height={30}
          width={30}
          alt="Light mode to Dark Mode switcher"
        /></button
      >
      <button
      ><Image
        src={menu}
        height={17}
        width={27}
        alt="Menu"
      /></button
    > 
    </div>
  </nav>
