---
import { Image } from "astro:assets";

interface Props{
    title: string;
    url: ImageMetadata;
    pubDate: Date;
}

const month = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
const { title, url, pubDate } = Astro.props as Props;
---
<main class="bg-LM-Title-Bar dark:bg-DM-Title-Bar p-3 rounded-2xl shadow-2xl transition">
    <div class="space-y-4 w-full flex flex-col md:items-start md:flex-row md:space-x-8">
        <Image class="md:w-[200px] rounded-lg" src={url} alt={title}></Image>
        <div class="flex flex-col items-center md:items-start font-sans text-LM-Title dark:text-DM-Title transition-all ease-linear">
            <h1 class="md:text-[30px] text-[22px] uppercase">{title}</h1>
            <span class="md:text-[14px] text-[12px] font-title">{`${pubDate.getDate()} ${month[pubDate.getMonth()]} ${pubDate.getFullYear()}`}</span>
        </div>
    </div>
</main>