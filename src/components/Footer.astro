---
import { footerLinks} from "../data/footerLinks.ts";
import { Image } from "astro:assets";
import yash from "../imgs/yash.svg";
import "@fontsource/ibm-plex-sans-hebrew";
import "@fontsource/ibm-plex-sans";
---

<footer class="w-full">
  <hr class="invisible md:visible md:bg-[#e0e0e0] md:mx-[90px] xl:visible xl:bg-[#e0e0e0] xl:mx-[90px]"></hr>
    <nav class="hidden md:mx-[100px] md:flex md:flex-row md:items-center md:justify-between md:my-5 xl:mx-[100px] xl:my-5 xl:flex xl:flex-row xl:items-center xl:justify-between">
        <div class="hidden md:flex md:flex-col md:items-start md:justify-between md:space-y-2 xl:flex xl:flex-row xl:items-center xl:justify-between xl:space-x-2 xl:space-y-0">
          <a href="/"> <Image src={yash} alt="Personal Logo" height={55} width={55} /> </a>
          <p class="md:text-[18px] xl:text-[20px] text-LM-Title dark:text-DM-Title">designed and developed by <span class="md:text-[18px] xl:text-[20px] text-LM-Nav-Unselected dark:text-DM-Nav-Unselected">Yash Sharma</span></p>
        </div>
          <div class="flex flex-row items-center justify-between space-x-4 xl:flex xl:flex-row xl:items-center xl:justify-between xl:space-x-5"> { footerLinks.map( (footerLink) => ( <li class="list-none"> <a class="text-LM-Title hover:text-LM-Para dark:text-DM-Title dark:hover:text-DM-Para text-[16px] md:text-[18px] xl:text-[20px]" href={footerLink.href}> {footerLink.title} </a> </li> ) ) } </div>
    </nav>
    <nav class="md:hidden xl:hidden mx-[34px] my-[24px]">
        <div class="flex flex-row items-center justify-between xl:flex xl:flex-row xl:items-center xl:justify-between xl:space-x-5"> { footerLinks.map( (footerLink) => ( <li class="list-none"> <a class="text-LM-Title hover:text-LM-Para dark:text-DM-Title dark:hover:text-DM-Para text-[18px] xl:text-[20px]" href={footerLink.href}> {footerLink.title} </a> </li> ) ) } </div>
    </nav>
</footer>

<style>
  li a {
    font-family: "IBM Plex Sans";
    font-style: normal;
    font-weight: 100;
    line-height: normal;
    letter-spacing: -1.05px;
  }
  p span {
    font-family: "IBM Plex Sans Hebrew";
    font-style: normal;
    font-weight: 100;
    line-height: normal;
    letter-spacing: -1.05px;
  }
  p {
    font-family: "IBM Plex Sans Hebrew";
    font-style: normal;
    font-weight: 100;
    line-height: normal;
    letter-spacing: -1.05px;
  }
  hr {
    display: block;
    border-style: inset;
    opacity: 0.36;
  }
</style>
