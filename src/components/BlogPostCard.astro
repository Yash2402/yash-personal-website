---
import { Icon } from "astro-icon/components";

interface Props {
  url: string;
  title: string;
  tags: string[];
  desc: string;
  author: string;
  pubDate: Date;
}

const { url, title, tags, desc, author, pubDate } = Astro.props as Props;
---

<div class="flex flex-col items-start my-10">
    <div class="flex flex-col space-y-1 md:space-y-0 md:flex-row md:space-x-4 mb-1 items-start md:items-center">
        <h3 class="font-sans text-base font-medium text-LM-Title dark:text-DM-Title uppercase tracking-[-.02rem]">
            <a href={url}>{title}</a>
        </h3>
        <ul class="flex flex-row space-x-0.5 font-sans text-sm pb-1 text-LM-Nav-Unselected dark:text-DM-Nav-Unselected">
            {tags.map((tag, idx) => (
                <>
                    <ul>
                        <a class="hover:text-LM-Nav-Selected dark:hover:text-DM-Nav-Selected" href="#" > {tag} </a>
                    </ul>

                    {idx < tags.length - 1 && (
                        <Icon
                            name="dot"
                            size={20}
                            class="text-LM-Nav-Selected dark:text-DM-Nav-Selected"
                        />
                        )}
                    </>
                ))
            }
        </ul>
    </div>
    <p
        class="mt-1 mb-2 font-serif text-base text-LM-Text w-full lg:w-9/12 dark:text-DM-Text"
    >
        {desc.toString()}
    </p>
    <div class="mt-2 flex flex-row items-center">
        <!-- TODO@ankt: Author Content Collection -->
        <a
            class="font-sans text-sm tracking-[-0.02rem] font-medium text-LM-Nav-Unselected dark:text-DM-Nav-Unselected hover:text-LM-Nav-Selected dark:hover:text-DM-Nav-Selected"
            href="#">{author}</a
        >
        <Icon
            name="dot"
            size={20}
            class="text-LM-Nav-Selected dark:text-DM-Nav-Selected"
        />
        <span
            class="font-sans text-sm tracking-[-0.02rem] font-medium text-LM-Text dark:text-DM-Text"
            >{
                `${pubDate.toLocaleDateString("default", { weekday: "short" })}, ${`0${pubDate.getDate().toString().slice(-2)}`} ${pubDate.toLocaleString("default", { month: "short" })} ${pubDate.getFullYear()}`
            }</span
        >
    </div>
</div>